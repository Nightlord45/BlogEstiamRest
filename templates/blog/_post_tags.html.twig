{% if not post.tags.empty %}
    <p class="post-tags">
        {% for tag in post.tags %}
            <span class="label label-default">
                <i class="fa fa-tag"></i> <a href="{{ path('blog_index_tag', {tag: tag.name}) }}">{{ tag.name }}</a>
            </span>
        {% endfor %}
    </p>
{% endif %}

